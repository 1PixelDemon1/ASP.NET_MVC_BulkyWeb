@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Create category</h2>
        <hr />
        @*All error messages in one place*@
        @*<div asp-validation-summary="All" class="text-primary"></div>*@
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            @*Error message*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            @*Error message*@
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@*Now all validation is performed on client-side*@
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}